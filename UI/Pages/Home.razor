@page "/"

<PageTitle>Home</PageTitle>

<h1 class="text-center">Welcome to my clean Architecture demo app!</h1>
<br />
<br />

<AuthorizeView>
    <Authorized>
        <button class="btn btn-danger" @onclick="Logout">Logout</button>
    </Authorized>
    <NotAuthorized>
        <button class="btn btn-danger" @onclick="GoToLogin">Login</button>
        ||
        <button class="btn btn-danger" @onclick="GoToRegister">Register</button>
    </NotAuthorized>
</AuthorizeView>
